@model CRM.Clients
@{
    ViewBag.Title = "_PopUpPartial";
}


<div class="popup-box" id="popup-box-1">
    <div class="close">X</div>
    <div class="top">
        <h2>Добавление Организации-Клиента</h2>
    </div>
    @using (Html.BeginForm("SaveNewClient", "Admin", FormMethod.Post))
    {
        
        <div class="bottom">
            <div class="editor-label">
                Название:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                Дата регистрации:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Registration_Date)
                @Html.ValidationMessageFor(model => model.Registration_Date)
            </div>

            <div class="editor-label">
                Сотрудник:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ID_Employee)
                @Html.ValidationMessageFor(model => model.ID_Employee)
            </div>

            <div class="editor-label">
                Адрес:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>

            <div class="editor-label">
                Почтовый адрес:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Post_Address)
                @Html.ValidationMessageFor(model => model.Post_Address)
            </div>

            <div class="editor-label">
                УНН\УНП:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UNN_UNP)
                @Html.ValidationMessageFor(model => model.UNN_UNP)
            </div>

            <div class="editor-label">
                Вид деятельности:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Kind_Activity)
                @Html.ValidationMessageFor(model => model.Kind_Activity)
            </div>

            <p>
                <input type="submit" id="saveClientButton" value="Сохранить" />
            </p>
        </div>
    }
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $('#Registration_Date').datepicker({
            format: 'dd.mm.yyyy'
        });

    })
    

</script>