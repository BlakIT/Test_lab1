@model CRM.Employees


@using (Html.BeginForm("EditEmployee", "Admin", FormMethod.Post, new { @class = "form-horizontal", role="form" , id="EditEmployeeForm"}))
{
        <div style="display:none;">
            @Html.EditorFor(model => model.ID_Employee )
        </div>
    
    
        <div class="form-group">
            <label class="control-label col-sm-2">Имя:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.FIO, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-sm-4">Должность:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Post, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    
    <div class="form-group">
            <label class="control-label col-sm-2">Адрес:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-sm-4">Дата рождения:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Date_Birth, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    
    
    <div class="form-group">
            <label class="control-label col-sm-2">Дата принятия:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Date_Admission, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-sm-4">Дата входа:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Date_Entry, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    
    
    <div class="form-group">
            <label class="control-label col-sm-2">Логин:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <label class="control-label col-sm-4">Пароль:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    
    
    <div class="form-group" id="buttonsDiv">
            <br /><br />
                <div class="col-sm-3">
                    <input type="submit" class="form-control" id="save" value="Сохранить" name="Save"/>
                </div>
        @if( ((CRM.Employees)Session["CurrentUser"]).Role == 1  && Model.ID_Employee != 1)
        {
                <div class="col-sm-3">
                    <input type="submit" class="form-control" id="delete" value="Удалить" name="Delete" />
                </div>
        }
         </div>
}

<script type="text/javascript">

    $(document).ready(function () {

        $('#Date_Birth').datepicker({
            format: 'dd.mm.yyyy'
        });

        $('#Date_Admission').datepicker({
            format: 'dd.mm.yyyy'
        });


        $('#Date_Entry').datepicker({
            format: 'dd.mm.yyyy'
        });

    })
    

</script>