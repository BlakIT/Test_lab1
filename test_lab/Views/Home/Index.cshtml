@model CRM.Users

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-5">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "LoginForm" }))
            {

                <div class="form-group">
                    <label for="loginn">Login:</label>
                    <input type="text" class="form-control" id="loginn" name="login">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" name="pass">
                </div>
    
                <button type="submit" class="btn btn-default">Вход</button>
            }
        </div>
        <div class="col-sm-7">
            @using (Html.BeginForm("Registration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "RegisterForm" }))
            {
    
                <div class="form-group">
                    <label class="control-label col-sm-2">Логин:</label>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Емэйл:</label>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Пароль:</label>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Подтвердите пароль:</label>
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.ConfPass, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
    
                <button type="submit" class="btn btn-default">Регистрация</button>
            }
        </div>
    </div>
</div>
